var express = require('express');
var Router = express.Router();
var BillDomain = require('../domain/BillDomain');

var BillDom = new BillDomain()

Router.get('/getAll', async function (req, res) {   
    res.send(await BillDom.findAll());
});

Router.get('/getById/:id', async function (req, res) {   
    res.send(await BillDom.findById(req.params.id));
});

Router.post('', async function (req, res) {   
    res.send(await BillDom.insert(req));
});

Router.put('', async function (req, res) {   
    res.send(await BillDom.update(req));
});

Router.delete('', async function (req, res) {   
    res.sendStatus(await BillDom.delete(req.body.IDFactura));
});

module.exports = Router